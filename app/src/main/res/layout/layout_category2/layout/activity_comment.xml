<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Login_Signup"
   >

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/sendMsgLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <com.google.android.material.card.MaterialCardView
               android:id="@+id/view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginVertical="10dp"
               app:cardBackgroundColor="@color/transparent"
               app:cardPreventCornerOverlap="true"
               app:checkedIcon="@drawable/ic_like"
               >
               <LinearLayout
                   xmlns:android="http://schemas.android.com/apk/res/android"
                   xmlns:app="http://schemas.android.com/apk/res-auto"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:background="@color/transparent"
                   >

                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <androidx.appcompat.widget.AppCompatImageView
                           android:id="@+id/notification_icon"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_alignParentEnd="true"
                           android:layout_marginHorizontal="20dp"
                           android:layout_marginVertical="20dp"
                           app:srcCompat="@drawable/ic_offnoti">
                       </androidx.appcompat.widget.AppCompatImageView>
                       <androidx.cardview.widget.CardView
                           android:id="@+id/post_profile_wrap"
                           android:layout_width="80dp"
                           android:layout_height="80dp"
                           app:cardCornerRadius="90dp"
                           android:layout_marginLeft="5dp"
                           android:layout_marginTop="5dp">
                           <ImageView
                               android:id="@+id/post_profile"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               app:srcCompat="@drawable/sample1"
                               android:scaleType="fitXY"/>
                       </androidx.cardview.widget.CardView>

                       <TextView
                           android:id="@+id/post_name"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Tung Doan"
                           android:layout_toRightOf="@+id/post_profile_wrap"
                           android:layout_marginLeft="10dp"
                           android:textStyle="bold"
                           android:fontFamily="@font/allerta"
                           android:textSize="15dp"
                           android:textColor="@color/black"
                           android:layout_marginTop="10dp"
                           android:textFontWeight="20"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_toRightOf="@+id/post_profile_wrap"
                           android:text="22 April"
                           android:layout_below="@+id/post_name"
                           android:layout_marginLeft="15dp"
                           android:layout_marginTop="10dp"
                           android:textSize="10dp"/>
                       <TextView
                           android:id="@+id/post_status"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_below="@+id/post_profile_wrap"
                           android:text="He is smiling ..."
                           android:textSize="20dp"
                           android:layout_marginTop="5dp"
                           android:layout_marginLeft="5dp"
                           android:textColor="@color/black"/>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="0.5dp"
                           android:layout_marginTop="3dp"
                           android:background="@android:color/darker_gray"
                           android:layout_below="@id/post_status"/>
                       <ImageView
                           android:id="@+id/post_image"
                           android:layout_width="match_parent"
                           android:layout_height="300dp"
                           android:layout_below="@id/post_status"
                           android:layout_marginTop="10dp"
                           android:scaleType="fitXY"/>
                       <ImageView
                           android:id="@+id/post_like"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/post_image"
                           android:src="@drawable/ic_like"
                           android:layout_marginLeft="10dp"
                           android:layout_marginTop="5dp"/>
                       <TextView
                           android:id="@+id/post_numberOfLike"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/post_image"
                           android:layout_marginTop="8dp"
                           android:text="20"
                           android:textSize="15dp"
                           android:layout_toRightOf="@id/post_like"
                           android:layout_marginLeft="5dp"/>
                       <TextView
                           android:id="@+id/post_comment"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/post_image"
                           android:layout_alignParentEnd="true"
                           android:layout_marginTop="8dp"
                           android:text="comment"
                           android:textSize="15dp"
                           android:layout_marginRight="10dp"/>
                       <TextView
                           android:id="@+id/post_numberOfComment"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_toLeftOf="@id/post_comment"
                           android:layout_below="@id/post_image"
                           android:layout_marginTop="8dp"
                           android:text="5"
                           android:layout_marginRight="5dp"
                           android:textSize="15dp"/>
                   </RelativeLayout>
                   <View
                       android:layout_width="match_parent"
                       android:layout_marginTop="3dp"
                       android:layout_height="0.5dp"
                       android:background="@android:color/darker_gray"/>

                   <androidx.appcompat.widget.LinearLayoutCompat
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:gravity="center_vertical|center_horizontal"
                       android:orientation="horizontal"
                       android:weightSum="8">

                       <com.google.android.material.button.MaterialButton
                           android:id="@+id/like"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_gravity="center_vertical"
                           android:layout_weight="4"
                           android:background="@color/transparent"
                           android:drawableLeft="@drawable/ic_like"
                           android:text="Like"
                           android:textColor="@color/black">

                       </com.google.android.material.button.MaterialButton>

                       <com.google.android.material.button.MaterialButton
                           android:id="@+id/comment"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:layout_weight="4"
                           android:background="@color/transparent"
                           android:drawableLeft="@drawable/ic_comment"
                           android:text="Comment"
                           android:textColor="@color/black" />
                   </androidx.appcompat.widget.LinearLayoutCompat>

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:background="@android:color/darker_gray"/>

               </LinearLayout>
           </com.google.android.material.card.MaterialCardView>
           <androidx.recyclerview.widget.RecyclerView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:id="@+id/list_comment"
               android:clipToPadding="false"
               android:paddingVertical="10dp"
               android:clipChildren="false"
               >
           </androidx.recyclerview.widget.RecyclerView>
       </LinearLayout>
    </androidx.core.widget.NestedScrollView>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="160dp"
        android:layout_marginHorizontal="50dp"
        android:padding="1dp"
        android:scrollbars="vertical"
        android:smoothScrollbar="true"
        app:layout_constraintBottom_toTopOf="@+id/sendMsgLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/comment_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="5dp"
            android:visibility="invisible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/choosenImage"
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"></ImageView>
                <ImageButton
                    android:id="@+id/imageRemoveBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_close"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"></ImageButton>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/emojiView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="160dp"
            android:layout_marginBottom="5dp"
            android:padding="1dp"
            android:scrollbars="vertical"
            android:smoothScrollbar="true"
            android:visibility="gone"
            android:layout_below="@+id/comment_image"
       ></androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/sendMsgLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageView"
        >


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="10">

            <LinearLayout
                android:id="@+id/msgLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layoutDirection="ltr"
                android:layout_marginHorizontal="10dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="25dp"
                    android:layout_marginLeft="8dp"
                    app:cardElevation="0dp">

                    <ImageButton
                        android:id="@+id/sendImgbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/ic_photo"
                        android:background="@color/transparent"></ImageButton>
                </androidx.cardview.widget.CardView>


                <com.example.tintok.CustomView.EditTextSupportIME
                    android:id="@+id/comment_field"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Comment..."
                    android:inputType="textMultiLine|text|textImeMultiLine"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical|left"></com.example.tintok.CustomView.EditTextSupportIME>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    app:cardElevation="0dp">

                    <ImageButton
                        android:id="@+id/openEmojibtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_smile"></ImageButton>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            app:cardElevation="0dp"
            android:background="@color/transparent">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/send_comment"
                android:scaleType="center"
                android:src="@drawable/ic_send"
                android:background="@color/transparent"></ImageButton>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>