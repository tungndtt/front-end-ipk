<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view_profile_age_title"
        style="@style/info_textview_style"
        android:text="Age"
        app:layout_constraintBottom_toTopOf="@+id/view_profile_age"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/view_profile_age"
        style="@style/info_sub_textview_style"
        android:text="age"

        app:layout_constraintBottom_toTopOf="@+id/view_profile_birthday"
        app:layout_constraintEnd_toEndOf="@+id/view_profile_age_title"

        app:layout_constraintStart_toStartOf="@+id/view_profile_age_title"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_age_title" />

    <TextView
        android:id="@+id/view_profile_birthday"
        style="@style/info_sub_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your birthday"
        app:layout_constraintBottom_toTopOf="@id/view_profile_divider_1"
        app:layout_constraintEnd_toEndOf="@+id/view_profile_age"
        app:layout_constraintStart_toStartOf="@+id/view_profile_age"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_age" />


    <View
        android:id="@+id/view_profile_divider_1"
        style="@style/info_view_style"
        app:layout_constraintBottom_toTopOf="@+id/view_profile_gender_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_birthday" />

    <TextView
        android:id="@+id/view_profile_gender_title"
        style="@style/info_textview_style"
        android:text="Gender"
        app:layout_constraintBottom_toTopOf="@+id/view_profile_gender"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_divider_1" />

    <TextView
        android:id="@+id/view_profile_gender"
        style="@style/info_sub_textview_style"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/view_profile_divider_2"
        app:layout_constraintEnd_toEndOf="@+id/view_profile_gender_title"

        app:layout_constraintStart_toStartOf="@+id/view_profile_gender_title"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_gender_title"
        tools:text="myGender" />

    <View
        android:id="@+id/view_profile_divider_2"
        style="@style/info_view_style"
        app:layout_constraintBottom_toTopOf="@+id/view_profile_description_title"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_gender" />

    <TextView
        android:id="@+id/view_profile_description_title"
        style="@style/info_textview_style"
        android:text="Description"
        app:layout_constraintBottom_toTopOf="@+id/view_profile_description"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_divider_2" />

    <TextView
        android:id="@+id/view_profile_description"
        style="@style/info_sub_textview_style"

        app:layout_constraintBottom_toTopOf="@+id/view_profile_divider_3"
        app:layout_constraintEnd_toEndOf="@+id/view_profile_description_title"

        app:layout_constraintStart_toStartOf="@+id/view_profile_description_title"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_description_title"
        tools:text="my inspirational quote" />

    <View
        android:id="@+id/view_profile_divider_3"
        style="@style/info_view_style"
        app:layout_constraintBottom_toTopOf="@+id/view_profile_interest_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_description" />

    <TextView
        android:id="@+id/view_profile_interest_title"
        style="@style/info_textview_style"
        android:text="Interest"
        app:layout_constraintBottom_toTopOf="@+id/view_profile_interest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_divider_3" />


    <TextView
        android:id="@+id/view_profile_interest"
        style="@style/info_sub_textview_style"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/view_profile_interest_title"
        app:layout_constraintStart_toStartOf="@+id/view_profile_interest_title"
        app:layout_constraintTop_toBottomOf="@+id/view_profile_interest_title"
        tools:text="interests" />


</androidx.constraintlayout.widget.ConstraintLayout>