<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/profile_email_text"
        style="@style/info_textview_style"
        android:text="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_email"
        style="@style/info_sub_textview_style"
        android:text="a@test.com"

        app:layout_constraintEnd_toEndOf="@+id/profile_email_text"
        app:layout_constraintStart_toStartOf="@+id/profile_email_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_email_text" />

    <View
        android:id="@+id/divider_0"
        style="@style/info_view_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_email" />

    <TextView
        android:id="@+id/profile_age_text"
        style="@style/info_textview_style"
        android:text="Age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_0" />

    <TextView
        android:id="@+id/profile_age"
        style="@style/info_sub_textview_style"
        android:text="age"

        app:layout_constraintEnd_toEndOf="@+id/profile_age_text"
        app:layout_constraintStart_toStartOf="@+id/profile_age_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_age_text" />

    <TextView
        android:id="@+id/profile_birthday"
        style="@style/info_sub_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your birthday"
        app:layout_constraintEnd_toEndOf="@+id/profile_age"
        app:layout_constraintStart_toStartOf="@+id/profile_age"
        app:layout_constraintTop_toBottomOf="@+id/profile_age" />


    <View
        android:id="@+id/divider_1"
        style="@style/info_view_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_birthday" />

    <TextView
        android:id="@+id/profile_gender_text"
        style="@style/info_textview_style"
        android:text="Gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_1" />


    <Spinner
        android:id="@+id/profile_gender"
        style="@style/info_sub_textview_style"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/profile_gender_text"
        app:layout_constraintStart_toStartOf="@+id/profile_gender_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_gender_text" />

    <View
        android:id="@+id/divider_2"
        style="@style/info_view_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_gender" />

    <TextView
        android:id="@+id/profile_description_text"
        style="@style/info_textview_style"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_2" />

    <EditText
        android:id="@+id/profile_description"
        style="@style/info_sub_textview_style"
        android:background="@color/transparent"

        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/profile_description_text"
        app:layout_constraintStart_toStartOf="@+id/profile_description_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_description_text" />

    <View
        android:id="@+id/divider_3"
        style="@style/info_view_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_description" />

    <TextView
        android:id="@+id/profile_interest_text"
        style="@style/info_textview_style"
        android:text="Interest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_3" />


    <TextView
        android:id="@+id/profile_interest"
        style="@style/info_sub_textview_style"
        android:hint="interests"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/profile_interest_text"
        app:layout_constraintStart_toStartOf="@+id/profile_interest_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_interest_text" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_edit_profile_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:drawableLeft="@drawable/ic_edit"
        android:text="Edit Profile"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_interest" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_cancel_profile_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:text="cancel"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit_profile_button" />


    <ProgressBar
        android:id="@+id/profile_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>